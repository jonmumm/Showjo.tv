html(lang="en")
  head
    link(rel='stylesheet', href='/assets/reset.css')
    != SocketStream
    title Showjo.tv
    link(href='http://fonts.googleapis.com/css?family=Josefin+Slab:100,100italic,light,lightitalic,regular,regularitalic,600,600italic,bold,bolditalic&v1', rel='stylesheet', type='text/css')
    link(href='http://fonts.googleapis.com/css?family=Swanky+and+Moo+Moo&v1', rel='stylesheet', type='text/css')
    link(href="http://fonts.googleapis.com/css?family=Josefin+Sans:100,100italic,300,300italic,400,400italic,600,600italic,700,700italic&v1", rel="stylesheet", type="text/css")
    link(href='http://fonts.googleapis.com/css?family=Bowlby+One+SC&v2', rel='stylesheet', type='text/css')
    link(href='/assets/reveal.css', rel='stylesheet', type='text/css')
    script(type='text/javascript', src='http://staging.tokbox.com/v0.91/js/TB.min.js')
    script(type='text/javascript', src='http://launchrock.com/api/lr.api.0.5-min.js')
  body
    #header-wrapper
      #header.logo
        h1 Showjo
          span .tv
        h4 The online open mic.
        .beta beta        
        #help.dropdown
          | Levels? XP? Help!
        #points.dropdown
          span Viewer bonus
          strong +10
          | XP
    #subheader-wrapper 
      #subheader
        #user-info.profile.left
          img.avatar32(src='images/avatar92.jpg', alt='Jon Avatar')
          span.user-name JonMumm
        #fan-info.profile.left
          strong.count 864
          span.label
            |  fans
        #level-info.profile.left
          #progress-wrapper
            #progress-bar-wrapper
              #progress-bar
              #level-xp-points 
                span 638 / 7000
                |  xp
            #current-level.level-status
              | Current Level:
              strong Amateur
            #next-level.level-status
              | Next Level:
              strong Superstar
        #login-panel.profile.right
          a#save-progress-link Save your progress
          |  or 
          a#login-link login
        #user-expand
    #page-wrapper
      #page
        #left-col-wrapper.column-wrapper
          #left-col.column
            #performer-wrapper
              #performer
                h4 Up 
                  span now
                p#nobody-on-stage.empty-show Nobody on stage
                   span#but-you (but 
                     span#could-be you could be
                     | !)
                #performer-info
                  #performer-name
                  #performer-description
            #performance-rating-wrapper
              #performance-rating
                h4 
                  span Performance Rating
                #performance-plot-wrapper
                  #performance-plot
        #main-wrapper
          #main      
            #stage-wrapper
              #stage
                h4 The 
                  strong Stage
                #publisher-wrapper
            #timer-wrapper
              #timer
                #timer-message                
                #time-passed.time
                  span.minutes 0
                  span :
                  span.seconds 00
                #time-total.time 
                  span.minutes 0
                  span :
                  span.seconds 00
                #time-bar-wrapper
                  #time-bar
            #voter-wrapper
              #voter
                button#lame-button-wrapper(disabled="disabled")
                  .vote-button 
                    span Lame
                    .thumb
                button#awesome-button-wrapper(disabled="disabled")
                  .vote-button 
                    span Awesome
                    .thumb
        #right-col-wrapper.column-wrapper
          #right-col.column
            #queue-wrapper
              #queue
                h4 Up 
                  span next
                ol#queue-list
                  li#queue-empty Empty
                button#rock-mic-button-wrapper.orange-button
                  #rock-mic-button
                    span Rock the 
                      strong mic
                button#leave-queue-button-wrapper.orange-button
                  #leave-queue-button
                    span Leave the 
                      strong queue
            #live-chat-wrapper
              #live-chat
                h4 Live 
                  span chat
                #enter-message
                  input(type='text', name='enter_chat_text', id='enter_chat_text', placeholder='enter a message')
                #messages.empty-depend.empty
      #empty-overlay.overlay.empty-show
        #arrow-img
        #be-the-star
        #perform-live Perform 
          strong live 
          | from 
          span your webcam.
        #no-registration (No 
          strong registration 
          | required)
        #silhouette-wrapper
          #silhouette
            #silhouette-img
      #access-overlay.overlay
        #arrow-up-img
        #press-allow Press 
          strong allow
        #asking-access #{"(We're asking for access to your camera)"}
    #join-queue-modal.reveal-modal
      .modal-wrapper
        h2 Start 
          strong rockin' 
          | the mic!
        h4 Join the queue to grab 3 minutes on stage.
        form
          .form-item.text
            label(for='user_stage_name') Your stage name:
              span.required *
            input(type='text', name='user_stage_name', id='user_stage_name')  
          .form-item.textarea
            label(for='performance_desc') Describe what you're gonna do:
            textarea(name='performance_desc', id='performance_desc', rows='3')
        .form-button-wrapper 
          a#cancel-link.close-modal Cancel
          button#join-queue-button-wrapper.orange-button
            #join-queue-button
              span Join the 
                strong queue             
    #enter-name-modal.reveal-modal.medium
      .modal-wrapper
        h3 
          strong Hey
          | , what's your name?
        h4 Tell everyone your name if you want to chat
        form
          .form-item.text
            label(for='user_chat_name') Your name:
            input(type='text', name='user_chat_name', id='user_chat_name')  
        .form-button-wrapper 
          button#enter-name-button-wrapper.orange-button
            #enter-name-button
              span 
              strong Enter                                                                                    
    #performer-view-modal.reveal-modal.xlarge
      .modal-wrapper
        h2 You're up next!
        #publisher-wrapper
          #publisher
    #launchrock-modal.reveal-modal.medium
      #launchrock
    #connecting-modal.reveal-modal.large.down
      #connecting-modal
        #connecting-wrapper
          #connecting-message
            #connecting-logo-wrapper
              #connecting-logo.logo
                h1 Showjo
                  span .tv
                .beta beta
            p 
              | Connecting to the 
              strong show
              | &#8212;hang tight!
          #timeout 
            p Hey, there was a 
              span.required problem 
              | #{"connecting :(."}
            p Try using a different browser like 
              a(href='http://www.google.com/chrome/') Chrome
              |  or 
              a(href='http://www.apple.com/safari/') Safari
              | .
    script(type='text/javascript', src='/assets/feedback.js')
    script(type='text/javascript', src='/assets/mp_protocol.js')
    script(type='text/javascript', src='/assets/mpmetrics.js')